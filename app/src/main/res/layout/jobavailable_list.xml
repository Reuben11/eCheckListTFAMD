<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:contentPadding="1dp"
        android:elevation="8dp"
        android:dividerHeight="0.0px"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:cardElevation="10dp"
        android:layout_margin="4dp"
        app:cardPreventCornerOverlap="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145dp">
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:paddingLeft="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/wrench"
                android:layout_alignParentLeft="true"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="6dp">
            <TextView
                android:id="@+id/jrnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Item 1"
                android:textColor="#1E8449"
                android:paddingTop="10dp"/>

            <TextView
                android:id="@+id/area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="14dp"
                android:text="Area"
                android:textStyle="bold"
                android:textColor="#343434"
                android:layout_below="@+id/jrnumber"
                />
            <TextView
                android:id="@+id/jobtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="14dp"
                android:text="Job Type"
                android:textColor="#343434"
                android:textStyle="bold"
                android:layout_below="@+id/area"
                />
            <TextView
                android:id="@+id/equipment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="14dp"
                android:text="Equipment Name"
                android:textColor="#343434"
                android:layout_below="@+id/jobtype"
                />
            <TextView
                android:id="@+id/requestor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="14dp"
                android:text="Requestor"
                android:textColor="#343434"
                android:layout_below="@+id/equipment"
                />
            <TextView
                android:id="@+id/jrDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="14dp"
                android:text="DateTime"
                android:paddingBottom="10dp"
                android:layout_below="@+id/requestor"
                android:textColor="#343434"
                />
        </RelativeLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>