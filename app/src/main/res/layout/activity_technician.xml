<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Technician.TechnicianActivity"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:id="@+id/technician_drawer_layout">

    <include
        layout="@layout/technician_app_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <android.support.design.widget.NavigationView
        android:id="@+id/technician_nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/technician_drawer"
        app:headerLayout="@layout/technician_headerlayout"/>

</android.support.v4.widget.DrawerLayout>


