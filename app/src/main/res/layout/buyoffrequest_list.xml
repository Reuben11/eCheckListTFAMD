<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    app:ignore="NamespaceTypo">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:contentPadding="1dp"
        android:elevation="8dp"
        android:dividerHeight="0.0px"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:cardElevation="10dp"
        android:layout_margin="4dp"
        app:cardPreventCornerOverlap="false">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp">
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:paddingLeft="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/analytics"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center"/>
        </LinearLayout>
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:paddingLeft="5dp"
           android:paddingTop="6dp">
           <TextView
               android:id="@+id/jrnumber"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="18dp"
               android:textStyle="bold"
               android:text="Item 1"
               android:textColor="#1E8449"
               android:paddingTop="10dp"/>

           <TextView
               android:id="@+id/buyoffarea"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="18dp"
               android:textStyle="bold"
               android:text="Process"
               android:textColor="#4D50FF"
               android:paddingLeft="5dp"
               android:paddingTop="0dp"
               android:layout_below="@+id/jrnumber"/>

           <TextView
               android:id="@+id/buyofflang"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="18dp"
               android:textStyle="bold"
               android:text=" - "
               android:textColor="#000000"
               android:paddingTop="10dp"
               android:layout_alignBaseline="@+id/buyoffarea"
               android:layout_toRightOf="@+id/buyoffarea"/>

           <TextView
               android:id="@+id/buyoffprocess"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_toRightOf="@+id/buyofflang"
               android:layout_alignBaseline="@+id/buyofflang"
               android:paddingTop="10dp"
               android:text="Area"
               android:textColor="#4D50FF"
               android:textSize="18dp"
               android:textStyle="bold" />

           <TextView
               android:id="@+id/checklistname"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingLeft="5dp"
               android:textSize="14dp"
               android:text="SubItem 1"
               android:textColor="#343434"
               android:layout_below="@+id/buyofflang"
               />

           <TextView
               android:id="@+id/equipmentname"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="14dp"
               android:text="SubItem 2"
               android:layout_below="@+id/checklistname"
               android:paddingLeft="5dp"
               android:textColor="#343434"
               />

           <TextView
               android:id="@+id/buyoffdatetime"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingLeft="5dp"
               android:paddingBottom="10dp"
               android:textSize="14dp"
               android:text="SubItem 3"
               android:textColor="#343434"
               android:layout_below="@+id/equipmentname"
               />
       </RelativeLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>